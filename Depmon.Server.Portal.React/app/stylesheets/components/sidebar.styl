.c-sidebar
  margin-left -185px
  min-width 170px
  height 100%
  position: fixed
  top 0
  bottom 0
  overflow auto
  background $secondary_color
  text-align center
  display: block
  padding: 2em 0

  .pure-menu
    text-align left

    .pure-menu-link
      color $main_color
      margin-left 0.5em
      padding .5em 1em

      &:hover, &:focus, &.active
        background $muted_color

    .pure-menu-heading
      border-bottom none
      font-size 110%
      color $muted_color
      padding .5em 1em

    .problem-count
      display inline-block
      background-color $important_color
      margin-left 8px
      color #fff
      border-radius 50%
      width 20px
      text-align center
      float: right

